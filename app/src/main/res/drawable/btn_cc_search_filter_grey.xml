<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/white" />
            <stroke android:width="@dimen/margin_1dp" android:color="@color/car_care_green_base" />
            <corners android:radius="@dimen/margin_3dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/margin_3dp" />
            <stroke android:width="@dimen/margin_1dp" android:color="@color/car_care_green_base" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/button_disable" />
            <corners android:radius="@dimen/margin_3dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/car_care_green_base" />
            <corners android:radius="@dimen/margin_3dp" />
            <stroke android:width="@dimen/margin_1dp" android:color="@color/car_care_green_base" />
        </shape>
    </item>
</selector>