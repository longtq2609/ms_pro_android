<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent">

        <TextView
            android:id="@+id/tvCount"
            android:layout_width="@dimen/tv_user_action"
            android:layout_height="@dimen/tv_user_action"
            android:background="@drawable/bg_btn_user_action"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/margin_3dp"
            android:text="0"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/imgAction"
            android:layout_width="@dimen/img_user_action"
            android:layout_height="@dimen/img_user_action"
            android:padding="@dimen/margin_10dp"
            android:focusable="true"
            android:clickable="true"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_below="@+id/tvCount"
            android:src="@mipmap/bt_like_rp"
            android:background="@drawable/bg_btn_user_action"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside" />

    </RelativeLayout>
</layout>